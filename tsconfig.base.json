{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@burson/ui": [
        "packages/ui/src"
      ],
      "@burson/ui/*": [
        "packages/ui/src/*"
      ]
    },
    "types": [
      "node",
      "jest",
      "cypress"
    ]
  }
}